
<div>
  <div>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div>
      <div>
        <%= f.label :username %>
      </div>
      <div>
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username...", autofocus: true %>
      </div>
    </div>
    <div>
      <div>
        <%= f.label :password %>
      </div>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password...", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-primary btn-lg") %>
      </div>
    </div>
    <% end %>
  </div>
</div>