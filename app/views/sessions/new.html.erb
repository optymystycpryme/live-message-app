<h1 class="ui center aligned header">Welcome to MessageMe | Chat In Style</h1>
<h2 class="ui center aligned medium icon header">
  <i class="inverted teal circular bug icon" id="gem-icon"></i>
  Login or Sign Up to continue...
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: { class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Enter your username..." %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Enter your password..." %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class: "ui teal small submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui black big button">
        <i class="signup icon"></i>
        <%= link_to  "Sign Up", signup_path, class: "signup-btn" %>
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>